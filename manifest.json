{
  "manifest_version": 3,
  "name": "Function Call Monitor",
  "version": "1.0",
  "description": "Monitor and store all function calls with their parameters",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Function Call Monitor"
  }
}