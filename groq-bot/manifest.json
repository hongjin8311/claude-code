{
  "display_information": {
    "name": "Groq AI Bot",
    "description": "Groq AI를 사용하는 Slack 봇으로 1:1 DM에서 AI 대화와 파일 분석을 지원합니다.",
    "background_color": "#2c2d30"
  },
  "features": {
    "bot_user": {
      "display_name": "Groq AI Bot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "im:history",
        "im:read",
        "files:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://your-domain.com/slack/events",
      "bot_events": [
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": false
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}